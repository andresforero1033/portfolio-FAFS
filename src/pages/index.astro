---
import { 
  Github, 
  Linkedin, 
  Mail, 
  ExternalLink, 
  Code2, 
  Terminal, 
  Cpu, 
  Database, 
  Layout, 
  GraduationCap, 
  Award,
  Server
} from 'lucide-react';
import '../styles/global.css';
import AFLogo from '../assets/logos/AF.svg?url';
import ProfilePhoto from '../assets/images/andres-forero-perfil.jpg?url';
import LogoSoulConnect from '../assets/logos/Soul Connect.svg?url';
import LogoCoreStore from '../assets/logos/Core Store.svg?url';
import LogoFactureo from '../assets/logos/Factureo.svg?url';
import LogoCreative from '../assets/logos/Creative.svg?url';
import LogoLivit from '../assets/logos/Livit.svg?url';
import LogoMedPet from '../assets/logos/MedPet.svg?url';

// --- TUS DATOS REALES ---

const projects = [
  {
    title: "SoulConnect",
    description: "Sistema de Gestión y Seguimiento Clínico. Plataforma robusta para administración de historias clínicas con alta disponibilidad.",
    tags: ["Angular", "Java Spring Boot", "PostgreSQL", "Mantine UI"],
    linkRepo: "https://github.com/andresforero1033/SoulConnect",
    linkDemo: "#",
    logo: LogoSoulConnect
  },
  {
    title: "Core Store",
    description: "E-commerce de Hardware de Alto Rendimiento. Motor de búsqueda avanzado y arquitectura de 'islas' para carga instantánea.",
    tags: ["Astro", "Go (Fiber)", "PostgreSQL", "Tailwind CSS"],
    linkRepo: "https://github.com/andresforero1033/Core-Store",
    linkDemo: "#",
    logo: LogoCoreStore
  },
  {
    title: "Factureo ERP",
    description: "Solución integral para PyMEs: inventario en tiempo real, POS, nómina y facturación electrónica automatizada.",
    tags: ["Vue.js", "NestJS", "PostgreSQL", "Bootstrap"],
    linkRepo: "https://github.com/andresforero1033/factureo",
    linkDemo: "#",
    logo: LogoFactureo
  },
  {
    title: "Creative",
    description: "Plataforma Educativa Interactiva para matemáticas. Gamificación en tiempo real y componentes reactivos complejos.",
    tags: ["Next.js", "NestJS", "PostgreSQL", "Tailwind"],
    linkRepo: "https://github.com/andresforero1033/Creative",
    linkDemo: "#",
    logo: LogoCreative
  },
  {
    title: "Livit",
    description: "Sistema de Administración de Copropiedades. Centraliza pagos, comunicación y gestión de zonas comunes.",
    tags: ["Next.js", "NestJS", "MongoDB", "Tailwind"],
    linkRepo: "https://github.com/andresforero1033/Livit",
    linkDemo: "#",
    logo: LogoLivit
  },
  {
    title: "MedPet",
    description: "Gestión de Salud Veterinaria. Digitalización de expedientes y sistema de alertas preventivas para mascotas.",
    tags: ["Angular", "Java Spring Boot", "PostgreSQL", "Bootstrap"],
    linkRepo: "https://github.com/andresforero1033/MedPet",
    linkDemo: "#",
    logo: LogoMedPet
  }
];

const skills = {
  frontend: ["Next.js", "React", "Astro", "Vue.js", "Angular", "Tailwind CSS"],
  backend: ["Node.js (NestJS)", "Go (Fiber/Gin)", "Java (Spring Boot)", "Python (Django/FastAPI)"],
  data: ["PostgreSQL", "MongoDB"],
  tools: ["Docker", "Git/GitHub", "RAG (IA)", "Microservicios", "Clean Arch"]
};

const certs = [
  "Programación Web – Univ. Nacional (2022)",
  "Redes y Telecomunicaciones – Huawei / INCAP",
  "Técnico en Asistencia Administrativa – SENA",
  "Instalación de Redes y Mantenimiento – INCAP"
